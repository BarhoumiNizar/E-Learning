    <head>
        <title>Inscription</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <link rel="stylesheet" type="text/css" href="../css/default.css"/>
    </head>
    <body>    
        <form method="POST" class="register">
            <h1>INSCRIPTION</h1>
            <%=event%>
            <fieldset class="row1">
                <legend>Détails du compte
                </legend>
                <p>
                   
                    <label>Login *
                    </label>
                    <input type="text" name="login"  />
                    <label>Répétez login *
                    </label>
                    <input type="text"/>
                </p>
                <p>
                    <label>Password*
                    </label>
                    <input type="password"  name="mdp"/>
                    <label>Répétez Password*
                    </label>
                    <input type="password"/>
                    <label class="obinfo">* Champs obligatoires
                    </label>
                </p>
            </fieldset>
            <fieldset class="row2">
                <legend>Détails personnels                </legend>
                <p>
                    <label>Nom *
                    </label>
                    <input type="text" class="long" name="nom"/>
                </p>
                <p>
                    <label>Prénom *
                    </label>
                    <input type="text" maxlength="10" name="prenom"/>
                </p>
                <p>
                    <label class="optional">Téléphone
                    </label>
                    <input type="text" class="long" name="numtel"/>
                </p>
                <p>
                    <label>Pays *
                    </label>
                    <input type="text" class="long" name="pays"/>
                </p>
                <p>
                    <label>Ville *
                     </label>
                    <select name="ville">
                        <option>
                        </option>
                        <option  >Manouba </option>
                        <option  >Ariana </option>
                        <option  >Ben Arous </option>
                        <option  >Beja </option>
                        <option  >Bizerte </option>
                    </select>
                </p>
                <p>
                    <label class="optional">Email
                    </label>
                    <input class="long" maxlength="20" type="email"  name="email"/>

                </p>
            </fieldset>
            <fieldset class="row3">
                <legend>Informations complémentaires
                </legend>
                <p>
                    <label>Sexe *  </label>
                    <input type="radio" name="sexe" value="M"/>
                    <label class="gender">M</label>
                    <input type="radio" name="sexe" value="F"/>
                    <label class="gender">F</label>
                </p>
                <p>
                    <label>Date de naissance * 
                    </label>
                    <input type="date" class="date" name="dateNaiss">
                      
                  
                </p>
